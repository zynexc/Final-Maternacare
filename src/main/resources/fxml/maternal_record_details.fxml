<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>

<VBox fx:id="rootPane" styleClass="details-container" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.maternacare.controller.MaternalRecordDetailsController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <ScrollPane fitToWidth="true" styleClass="scroll-pane">
        <VBox spacing="20">
            <!-- Personal Information Section -->
            <VBox styleClass="details-section">
                <Text styleClass="section-title">Personal Information</Text>
                <GridPane styleClass="details-grid" hgap="15" vgap="15">
                    <Label text="Patient ID:" styleClass="field-label" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                    <Label fx:id="patientIdLabel" styleClass="field-value" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                    
                    <Label text="Last Name:" styleClass="field-label" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                    <Label fx:id="lastNameLabel" styleClass="field-value" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                    
                    <Label text="First Name:" styleClass="field-label" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                    <Label fx:id="firstNameLabel" styleClass="field-value" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                    
                    <Label text="Middle Name:" styleClass="field-label" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                    <Label fx:id="middleNameLabel" styleClass="field-value" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                    
                    <Label text="Date of Birth:" styleClass="field-label" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                    <Label fx:id="dateOfBirthLabel" styleClass="field-value" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
                    
                    <Label text="Age:" styleClass="field-label" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
                    <Label fx:id="ageLabel" styleClass="field-value" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
                    
                    <Label text="Civil Status:" styleClass="field-label" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
                    <Label fx:id="civilStatusLabel" styleClass="field-value" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
                    
                    <Label text="Religion:" styleClass="field-label" GridPane.columnIndex="0" GridPane.rowIndex="7"/>
                    <Label fx:id="religionLabel" styleClass="field-value" GridPane.columnIndex="1" GridPane.rowIndex="7"/>
                </GridPane>
            </VBox>

            <!-- Contact Information Section -->
            <VBox styleClass="details-section">
                <Text styleClass="section-title">Contact Information</Text>
                <GridPane styleClass="details-grid" hgap="15" vgap="15">
                    <Label text="Address:" styleClass="field-label" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                    <Label fx:id="addressLabel" styleClass="field-value" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                    
                    <Label text="Contact Number:" styleClass="field-label" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                    <Label fx:id="contactNumberLabel" styleClass="field-value" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                    
                    <Label text="Email:" styleClass="field-label" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                    <Label fx:id="emailLabel" styleClass="field-value" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                </GridPane>
            </VBox>

            <!-- Vital Signs Section -->
            <VBox styleClass="details-section">
                <Text styleClass="section-title">Vital Signs</Text>
                <GridPane styleClass="details-grid" hgap="15" vgap="15">
                    <Label text="Blood Pressure:" styleClass="field-label" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                    <Label fx:id="bloodPressureLabel" styleClass="field-value" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                    
                    <Label text="Temperature:" styleClass="field-label" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                    <Label fx:id="temperatureLabel" styleClass="field-value" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                    
                    <Label text="Pulse Rate:" styleClass="field-label" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                    <Label fx:id="pulseRateLabel" styleClass="field-value" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                    
                    <Label text="Respiratory Rate:" styleClass="field-label" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                    <Label fx:id="respiratoryRateLabel" styleClass="field-value" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                </GridPane>
            </VBox>

            <!-- Pregnancy Information Section -->
            <VBox styleClass="details-section">
                <Text styleClass="section-title">Pregnancy Information</Text>
                <GridPane styleClass="details-grid" hgap="15" vgap="15">
                    <Label text="Last Menstrual Period:" styleClass="field-label" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                    <Label fx:id="lastMenstrualPeriodLabel" styleClass="field-value" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                    
                    <Label text="Expected Delivery Date:" styleClass="field-label" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                    <Label fx:id="expectedDeliveryDateLabel" styleClass="field-value" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                    
                    <Label text="Gravida:" styleClass="field-label" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                    <Label fx:id="gravidaLabel" styleClass="field-value" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                    
                    <Label text="Para:" styleClass="field-label" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                    <Label fx:id="paraLabel" styleClass="field-value" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                    
                    <Label text="Abortion:" styleClass="field-label" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                    <Label fx:id="abortionLabel" styleClass="field-value" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
                    
                    <Label text="Living Children:" styleClass="field-label" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
                    <Label fx:id="livingChildrenLabel" styleClass="field-value" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
                </GridPane>
            </VBox>
        </VBox>
    </ScrollPane>

    <HBox alignment="CENTER_RIGHT" spacing="10" styleClass="button-container">
        <Button text="Close" onAction="#handleClose" styleClass="close-button"/>
    </HBox>
</VBox> 