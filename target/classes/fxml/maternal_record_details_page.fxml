<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.text.*?>

<ScrollPane fitToWidth="true" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.maternacare.controller.MaternalRecordDetailsPageController">
    <content>
        <VBox xmlns="http://javafx.com/javafx"
              xmlns:fx="http://javafx.com/fxml"
              fx:id="detailsRoot"
              spacing="20" alignment="TOP_CENTER" prefWidth="900" styleClass="details-page-root">
            <!-- Header Bar -->
            <HBox styleClass="section-header" alignment="CENTER_LEFT" spacing="10">
                <Label text="Maternal Record Details" styleClass="section-header-title"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="âœ•" onAction="#handleBack" styleClass="close-btn"/>
            </HBox>

            <!-- Grouped Personal Information and Details -->
            <VBox styleClass="card-group" spacing="20">
                <VBox styleClass="pregnancy-history-card" spacing="10">
                    <Label text="Personal Information" styleClass="pregnancy-header"/>
                    <GridPane hgap="10" vgap="8">
                        <Label text="Patient ID :" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <Label fx:id="patientIdLabel" styleClass="info-value-bold" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                        <Label text="Full Name :" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
                        <Label fx:id="fullNameLabel" styleClass="info-value-bold" GridPane.rowIndex="0" GridPane.columnIndex="3"/>
                        <Label text="Date of Birth :" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <Label fx:id="dobLabel" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                        <Label text="Address :" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
                        <Label fx:id="addressLabel" GridPane.rowIndex="1" GridPane.columnIndex="3"/>
                        <Label text="Purok :" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                        <Label fx:id="purokLabel" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                        <Label text="Contact Number :" GridPane.rowIndex="2" GridPane.columnIndex="2"/>
                        <Label fx:id="contactNumberLabel" GridPane.rowIndex="2" GridPane.columnIndex="3"/>
                        <Label text="Email :" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                        <Label fx:id="emailLabel" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
                        <Label text="Last Menstrual Period :" GridPane.rowIndex="3" GridPane.columnIndex="2"/>
                        <Label fx:id="lmpLabel" GridPane.rowIndex="3" GridPane.columnIndex="3"/>
                        <Label text="Expected Delivery Date :" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                        <Label fx:id="eddLabel" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
                        <Label text="Age :" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
                        <Label fx:id="ageLabel" GridPane.rowIndex="1" GridPane.columnIndex="3"/>
                        <Label text="Next Appointment :" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                        <Label fx:id="nextAppointmentLabel" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
                    </GridPane>
                    <GridPane hgap="10" vgap="8">
                        <Label text="Temperature :" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <Label fx:id="temperatureLabel" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                        <Label text="Pulse Rate :" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
                        <Label fx:id="pulseRateLabel" GridPane.rowIndex="0" GridPane.columnIndex="3"/>
                        <Label text="Respiratory Rate :" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <Label fx:id="respiratoryRateLabel" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                        <Label text="Age of Gestation (AOG) :" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
                        <Label fx:id="aogLabel" GridPane.rowIndex="1" GridPane.columnIndex="3"/>
                        <Label text="Height (cm) :" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                        <Label fx:id="heightLabel" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                        <Label text="Weight (lbs) :" GridPane.rowIndex="2" GridPane.columnIndex="2"/>
                        <Label fx:id="weightLabel" GridPane.rowIndex="2" GridPane.columnIndex="3"/>
                        <Label text="Fetal Heart Tone (FHT) :" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                        <Label fx:id="fhtLabel" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
                        <Label text="Presentation :" GridPane.rowIndex="3" GridPane.columnIndex="2"/>
                        <Label fx:id="presentationLabel" GridPane.rowIndex="3" GridPane.columnIndex="3"/>
                        <Label text="Chief Complaint :" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                        <Label fx:id="chiefComplaintLabel" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
                        <Label text="To come Back :" GridPane.rowIndex="4" GridPane.columnIndex="2"/>
                        <Label fx:id="toComeBackLabel" GridPane.rowIndex="4" GridPane.columnIndex="3"/>
                        <Label text="Remarks :" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                        <Label fx:id="remarksLabel" GridPane.rowIndex="5" GridPane.columnIndex="1" GridPane.columnSpan="3"/>
                    </GridPane>
                </VBox>
            </VBox>

            <!-- Stats Row -->
            <HBox spacing="16" alignment="CENTER" styleClass="stats-row">
                <VBox styleClass="stats-card" alignment="CENTER" HBox.hgrow="ALWAYS">
                    <Label text="Gravida" styleClass="stats-label"/>
                    <Label fx:id="gravidaLabel" styleClass="highlight-number"/>
                </VBox>
                <VBox styleClass="stats-card" alignment="CENTER" HBox.hgrow="ALWAYS">
                    <Label text="Para" styleClass="stats-label"/>
                    <Label fx:id="paraLabel" styleClass="highlight-number"/>
                </VBox>
                <VBox styleClass="stats-card" alignment="CENTER" HBox.hgrow="ALWAYS">
                    <Label text="Living Children" styleClass="stats-label"/>
                    <Label fx:id="livingChildrenLabel" styleClass="highlight-number"/>
                </VBox>
                <VBox styleClass="stats-card" alignment="CENTER" HBox.hgrow="ALWAYS">
                    <Label text="Abortion" styleClass="stats-label"/>
                    <Label fx:id="abortionLabel" styleClass="highlight-number"/>
                </VBox>
            </HBox>

            <!-- Pregnancy History Section -->
            <Label text="Pregnancy History Details" styleClass="subsection-header" alignment="CENTER_LEFT"/>
            <VBox fx:id="pregnancyHistoryContainer" spacing="14" alignment="TOP_LEFT" styleClass="card" maxWidth="Infinity"/>

            <!-- Follow-Up Vital Signs Section -->
            <Label text="Follow-Up Vital Signs" styleClass="subsection-header" alignment="CENTER_LEFT"/>
            <VBox fx:id="followUpContainer" spacing="14" alignment="TOP_LEFT" styleClass="card" maxWidth="Infinity"/>
        </VBox>
    </content>
</ScrollPane>