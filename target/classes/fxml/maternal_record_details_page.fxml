<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox fx:id="detailsRoot" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml" fx:controller="com.maternacare.controller.MaternalRecordDetailsPageController"
      spacing="12" styleClass="details-root" style="-fx-background-color: #fff;">

    <HBox styleClass="header-bar" alignment="CENTER" spacing="10">
        <Label text="Maternal Record Details" styleClass="header-titles" />
        <Pane HBox.hgrow="ALWAYS" />
        <Button text="Back to Records" onAction="#handleBack" styleClass="back-button" />
    </HBox>

    <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS">
        <VBox spacing="18">
            <VBox styleClass="section-card">
                <VBox styleClass="personal-info-container">
                    <Label text="Personal Information" styleClass="header-title" />
                    <GridPane hgap="10" vgap="6">
                        <columnConstraints>
                            <ColumnConstraints percentWidth="25"/>
                            <ColumnConstraints percentWidth="25"/>
                            <ColumnConstraints percentWidth="25"/>
                            <ColumnConstraints percentWidth="25"/>
                        </columnConstraints>

                        <Label text="Patient ID :" styleClass="bold-text" />
                        <Label fx:id="patientIdLabel" styleClass="bold-text" GridPane.columnIndex="1" />

                        <Label text="Full Name :" styleClass="bold-text" GridPane.columnIndex="2" />
                        <Label fx:id="fullNameLabel" styleClass="bold-text" GridPane.columnIndex="3" />

                        <Label text="Date of Birth :" GridPane.rowIndex="1" />
                        <Label fx:id="dobLabel" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                        <Label text="Age :" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                        <Label fx:id="ageLabel" GridPane.columnIndex="3" GridPane.rowIndex="1" />

                        <Label text="Address :" GridPane.rowIndex="2" />
                        <Label fx:id="addressLabel" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                        <Label text="Purok :" GridPane.rowIndex="3" />
                        <Label fx:id="purokLabel" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                        <Label text="Contact Number :" GridPane.columnIndex="2" GridPane.rowIndex="3" />
                        <Label fx:id="contactNumberLabel" GridPane.columnIndex="3" GridPane.rowIndex="3" />

                        <Label text="Email :" GridPane.rowIndex="4" />
                        <Label fx:id="emailLabel" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                        <Label text="Last Menstrual Period :" GridPane.columnIndex="2" GridPane.rowIndex="4" />
                        <Label fx:id="lmpLabel" GridPane.columnIndex="3" GridPane.rowIndex="4" />

                        <Label text="Expected Delivery Date :" GridPane.rowIndex="5" />
                        <Label fx:id="eddLabel" GridPane.columnIndex="1" GridPane.rowIndex="5" />

                        <Label text="Next Appointment :" GridPane.columnIndex="2" GridPane.rowIndex="5" />
                        <Label fx:id="nextAppointmentLabel" GridPane.columnIndex="3" GridPane.rowIndex="5" />
                    </GridPane>
                </VBox>
            </VBox>

            <VBox styleClass="section-card">
                <VBox styleClass="vital-signs-container">
                    <Label text="Vital Signs" styleClass="header-title"/>
                    <GridPane hgap="10" vgap="14">
                        <columnConstraints>
                            <ColumnConstraints percentWidth="25"/>
                            <ColumnConstraints percentWidth="25"/>
                            <ColumnConstraints percentWidth="25"/>
                            <ColumnConstraints percentWidth="25"/>
                        </columnConstraints>

                        <Label text="Temperature :" />
                        <Label fx:id="temperatureLabel" GridPane.columnIndex="1" />
                        <Label text="Pulse Rate :" GridPane.columnIndex="2" />
                        <Label fx:id="pulseRateLabel" GridPane.columnIndex="3" />

                        <Label text="Respiratory Rate :" GridPane.rowIndex="1" />
                        <Label fx:id="respiratoryRateLabel" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <Label text="Age of Gestation (AOG) :" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                        <Label fx:id="aogLabel" GridPane.columnIndex="3" GridPane.rowIndex="1" />

                        <Label text="Height (cm) :" GridPane.rowIndex="2" />
                        <Label fx:id="heightLabel" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        <Label text="Weight (lbs) :" GridPane.columnIndex="2" GridPane.rowIndex="2" />
                        <Label fx:id="weightLabel" GridPane.columnIndex="3" GridPane.rowIndex="2" />

                        <Label text="Fetal Heart Tone (FHT) :" GridPane.rowIndex="3" />
                        <Label fx:id="fhtLabel" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                        <Label text="Presentation :" GridPane.columnIndex="2" GridPane.rowIndex="3" />
                        <Label fx:id="presentationLabel" GridPane.columnIndex="3" GridPane.rowIndex="3" />

                        <Label text="Chief Complaint :" GridPane.rowIndex="4" />
                        <Label fx:id="chiefComplaintLabel" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                        <Label text="To come Back :" GridPane.columnIndex="2" GridPane.rowIndex="4" />
                        <Label fx:id="toComeBackLabel" GridPane.columnIndex="3" GridPane.rowIndex="4" />

                        <Label text="Remarks :" GridPane.rowIndex="5" />
                        <Label fx:id="remarksLabel" GridPane.columnIndex="1" GridPane.rowIndex="5" GridPane.columnSpan="3" />
                    </GridPane>
                </VBox>
            </VBox>

            <HBox spacing="16" alignment="CENTER" styleClass="stat-boxes">
                <VBox styleClass="stat-box" HBox.hgrow="ALWAYS">
                    <Label text="Gravida" />
                    <Label fx:id="gravidaLabel" styleClass="stat-value" />
                </VBox>
                <VBox styleClass="stat-box" HBox.hgrow="ALWAYS">
                    <Label text="Para" />
                    <Label fx:id="paraLabel" styleClass="stat-value" />
                </VBox>
                <VBox styleClass="stat-box" HBox.hgrow="ALWAYS">
                    <Label text="Living Children" />
                    <Label fx:id="livingChildrenLabel" styleClass="stat-value" />
                </VBox>
                <VBox styleClass="stat-box" HBox.hgrow="ALWAYS">
                    <Label text="Abortion" />
                    <Label fx:id="abortionLabel" styleClass="stat-value" />
                </VBox>
            </HBox>

            <VBox styleClass="section-card">
                <VBox styleClass="pregnancy-history-container">
                    <Label text="Pregnancy History Details" styleClass="header-title"/>
                    <VBox fx:id="pregnancyHistoryContainer" spacing="18" />
                </VBox>
            </VBox>

            <VBox styleClass="section-card">
                <VBox styleClass="follow-up-container">
                    <Label text="Follow-Up Vital Signs" styleClass="header-title"/>
                    <VBox fx:id="followUpFormContainer" />
                    <VBox fx:id="followUpContainer" spacing="18" />
                </VBox>
            </VBox>
        </VBox>
    </ScrollPane>

    <HBox alignment="CENTER" spacing="16" style="-fx-padding: 16 0 16 0;">
        <Button text="Edit" fx:id="editRecordButton" styleClass="edit-button" />
        <Button text="Delete" fx:id="deleteRecordButton" styleClass="delete-button" />
    </HBox>
    <HBox fx:id="deleteConfirmBox" alignment="CENTER" spacing="10" visible="false" managed="false" style="-fx-padding: 0 0 16 0;">
        <Label text="Are you sure you want to delete this maternal record?" style="-fx-font-weight: bold; -fx-text-fill: #d32f2f;" />
        <Button text="Confirm" fx:id="confirmDeleteButton" styleClass="delete-button" />
        <Button text="Cancel" fx:id="cancelDeleteButton" styleClass="back-button" />
    </HBox>
</VBox>