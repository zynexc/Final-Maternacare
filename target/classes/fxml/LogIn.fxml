<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.LogIn">
   <children>
      <HBox prefHeight="400.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <VBox alignment="CENTER" prefHeight="400.0" prefWidth="300.0" spacing="20.0" style="-fx-background-color: #f8f3ed; -fx-padding: 40;">
               <children>
                  <Label text="Login">
                     <font>
                        <Font name="System Bold" size="24.0" />
                     </font>
                  </Label>
                  <TextField fx:id="username" promptText="Email Address" />
                  <PasswordField fx:id="password" promptText="Password" />
                  <StackPane prefWidth="Infinity">
                     <children>
                        <Button fx:id="button" mnemonicParsing="false" onAction="#userLogIn" prefWidth="Infinity" text="Log in" style="-fx-background-color: black; -fx-text-fill: white; -fx-font-weight: bold;" />
                        <ProgressIndicator fx:id="loginProgress" visible="false" maxWidth="20" maxHeight="20" />
                     </children>
                  </StackPane>
                  <Region VBox.vgrow="ALWAYS" />
                  <Label fx:id="wrongLogIn" textFill="RED" />
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </VBox>
            <ImageView fitHeight="400.0" fitWidth="300.0" pickOnBounds="true" preserveRatio="true" style="-fx-background-color: #f0ebe3;">
               <image>
                  <Image url="@/images/preg.png" />
               </image>
            </ImageView>
         </children>
      </HBox>
   </children>
</AnchorPane> 